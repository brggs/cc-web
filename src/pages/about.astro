---
import Container from "../components/Container.astro";
import TitleImage from "../components/TitleImage.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

import { Picture } from "astro:assets";
import abImage from "../assets/ab.png";

const pageTitle = "About Curious Coders";
const description = "...";

const socialLinks = [
    {
      url: "https://www.instagram.com/mrabriggs/",
      icon: "fab fa-instagram",
    },
    {
      url: "https://www.linkedin.com/in/brggs/",
      icon: "fab fa-linkedin",
    },
    {
      url: "https://bsky.app/profile/andy.curiouscoders.co.uk",
      icon: "fab fa-bluesky",
    },
    {
      url: "https://github.com/brggs",
      icon: "fab fa-github",
    },
  ]
---

<BaseLayout pageTitle={pageTitle}>
  <TitleImage title={pageTitle} , description={description} />

  <section class="bg-pink-700 py-12">
    <Container>
      <div
        class="max-w-4xl mx-auto flex flex-col md:flex-row gap-8 items-center"
      >
        <div class="w-full md:w-1/3">
          <Picture
            class="w-48 md:w-72 rounded-2xl"
            src={abImage}
            formats={["avif", "webp"]}
            alt="The Curious Coders Logo, white text on a pink background."
          />
        </div>
        <div class="w-full md:w-2/3">
          <h3 class="text-xl font-bold mb-3">
            Curoius Coders is the side project of Software Engineer Andy Briggs.
          </h3>
          <p class="mb-4">
            After x years in coding, started getting more involved in outreach
            and education.
          </p>
          <p class="mb-4">
            I run a coding club in our local library for the last 3 years, and
            have taken part in lots of events as a STEM ambassador. 
          </p>
          <p class="mb-4">In 2024,
            started Curious Coders as an outlet Since made events for the Scouts
            and Guides, and CyberFirst.
          </p>
          <p class="mb-4"> Of course, it's all really just an
            excuse to make cool things and play with fun toys!
          </p>
        </div>
      </div>
    </Container>
  </section>

  <section class="py-8">
    <div class="max-w-4xl mx-auto px-6 md:px-12 text-center">
      <h2 class="text-3xl">Get in touch</h2>
      <div class="flex justify-center space-x-4 md:space-x-8 my-4">
        {socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-50 hover:text-slate-200 transition-colors duration-300 text-2xl sm:text-3xl md:text-4xl hover:animate-wiggle"
          >
            <i class={`${link.icon} font-bold`}></i>
          </a>
        ))}
      </div>
      <p class="text-xl mb-6"><a href="mailto:andy@curiouscoders.co.uk">andy@curiouscoders.co.uk</a></p>
    </div>
  </section>
</BaseLayout>
