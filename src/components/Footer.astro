---
import Container from "./Container.astro";

import { Picture } from 'astro:assets';
import logo from '../assets/cc-logo.png';
import CallToAction from "./CallToAction.astro";

const links = [
{ url: "/news", display: "News" },
{ url: "/tutorials", display: "Tutorials" },
{ url: "/activities", display: "Activities" },
{ url: "/about", display: "About" },
];

const currentYear = new Date().getFullYear();
---

<CallToAction />
<footer class="pt-6">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <div class="flex items-center py-4">
          <Picture class="w-16 mr-2 rounded-full" src={logo} formats={['avif', 'webp']} alt="The Curious Coders Logo, white text on a pink background." />
          <h3 class="text-xl font-bold text-primary">Curious Coders</h3>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Learning, coding, and exploring together in the world of software
          development.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Navigation</h3>
        <ul class="space-y-2">
          {links.map((link) => 
          <li>
            <a href=`${link.url}` class="text-gray-600 dark:text-gray-400 hover:text-primary">{link.display}</a>
          </li>)}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Connect</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="https://github.com/withastro"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              >GitHub</a>
          </li>
          <li>
            <a
              href="https://twitter.com/astrodotbuild"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              >Twitter</a>
          </li>
          <li>
            <a
              href="https://discord.gg/astro"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              >Discord</a>
          </li>
        </ul>
      </div>
    </div>

    <div
      class="mt-8 pt-4 border-t border-gray-200 dark:border-gray-800 text-center text-sm text-gray-500 dark:text-gray-400"
    >
      <p>&copy; {currentYear} Curious Coders. All rights reserved.</p>
    </div>
  </Container>
</footer>
