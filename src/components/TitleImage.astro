---
//TODO Import picture, image in props?
const { title, description, author, date } = Astro.props;
---

<div
  class="mt-[-90px] pt-16 min-h-72 bg-gray-600 bg-[url(/public/hero-bg.png)] bg-blend-overlay drop-shadow-2xl"
>
  <div class="max-w-3xl mx-auto px-6 md:px-12 py-4 text-center">
    <h1 class="text-pink-500 font-bold mt-24 text-4xl">
      {title}
    </h1>
    <h2 class="text-xl font-light pb-2">{description}</h2>
    <span class="text-sky-300">
      {date} - {author} 
    </span>
  </div>
</div>
